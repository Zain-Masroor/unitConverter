<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Length Conversion</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <h1>Length Conversion</h1>
    <form action="/length" method="POST">
        <div>
            <label for="unit1">From:</label>
            <select name="unit1" id="unit1" onchange="updateUnit2Options()">
                <option value="mm" <%= typeof unit1 !== 'undefined' && unit1 === 'mm' ? 'selected' : '' %>>Millimeters (mm)</option>
                <option value="cm" <%= typeof unit1 !== 'undefined' && unit1 === 'cm' ? 'selected' : '' %>>Centimeters (cm)</option>
                <option value="m" <%= typeof unit1 !== 'undefined' && unit1 === 'm' ? 'selected' : '' %>>Meters (m)</option>
                <option value="km" <%= typeof unit1 !== 'undefined' && unit1 === 'km' ? 'selected' : '' %>>Kilometers (km)</option>
            </select>
        </div>

        <div>
            <label for="unit2">To:</label>
            <select name="unit2" id="unit2">
                <option value="mm" <%= typeof unit2 !== 'undefined' && unit2 === 'mm' ? 'selected' : '' %>>Millimeters (mm)</option>
                <option value="cm" <%= typeof unit2 !== 'undefined' && unit2 === 'cm' ? 'selected' : '' %>>Centimeters (cm)</option>
                <option value="m" <%= typeof unit2 !== 'undefined' && unit2 === 'm' ? 'selected' : '' %>>Meters (m)</option>
                <option value="km" <%= typeof unit2 !== 'undefined' && unit2 === 'km' ? 'selected' : '' %>>Kilometers (km)</option>
            </select>
        </div>

        <div>
            <label for="number">Enter the value:</label>
            <input type="number" name="number" id="number" value="<%= typeof number !== 'undefined' ? number : '' %>" required min="0" step="0.01" oninput="validity.valid||(value='');">
        </div>

        <div>
            <button type="submit">Convert</button>
        </div>
    </form>

    <% if (typeof convertedValue !== 'undefined') { %>
        <h3>Converted Value: <%= convertedValue %> <%= unit2 %></h3>
    <% } %>

    <br><br>
    <a href="/">Back to Main Page</a>

    <script>
        function updateUnit2Options() {
            const unit1 = document.getElementById('unit1').value;
            const unit2 = document.getElementById('unit2');
            for (let i = 0; i < unit2.options.length; i++) {
                unit2.options[i].disabled = unit2.options[i].value === unit1;
            }
        }
        window.onload = updateUnit2Options;
    </script>
</body>
</html>
